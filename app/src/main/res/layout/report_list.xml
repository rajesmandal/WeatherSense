<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="170dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="10dp"
    android:hapticFeedbackEnabled="true"
    android:layout_width="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_bg" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="match_parent">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/warm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.293"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.335">

                </ImageView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/wind"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/windspeed"
                    app:layout_constraintHorizontal_bias="0.293"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.621">

                </ImageView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/drop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.293"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.914">

                </ImageView>

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="30dp"
                    android:text="temperature"
                    android:textColor="@color/sun_yellow"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_goneMarginEnd="5dp"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/iv_condition"
                    app:layout_constraintTop_toTopOf="@id/iv_condition" />

                <TextView
                    android:id="@+id/windspeed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="30dp"
                    android:text="windspeed"
                    android:textColor="@color/sun_yellow"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/iv_condition"
                    app:layout_constraintTop_toBottomOf="@id/temperature"
                    app:layout_goneMarginEnd="5dp" />

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingStart="30dp"
                    android:text="humidity"
                    android:textColor="@color/sun_yellow"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/iv_condition"
                    app:layout_constraintTop_toBottomOf="@id/windspeed"
                    app:layout_goneMarginEnd="5dp" />

                <TextView
                    android:id="@+id/preasure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="preasure"
                    app:layout_constraintHorizontal_bias="0"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_goneMarginEnd="5dp"
                    app:layout_constraintStart_toEndOf="@id/iv_condition"
                    app:layout_constraintTop_toBottomOf="@id/humidity" />
                <TextView
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:text="description"
                    app:layout_constraintHorizontal_bias="0"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_goneMarginEnd="5dp"
                    app:layout_constraintStart_toEndOf="@id/iv_condition"
                    app:layout_constraintTop_toBottomOf="@id/preasure" />
                <ImageView
                    android:id="@+id/iv_condition"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    app:layout_goneMarginEnd="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/conditioninlocation"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/conditioninlocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Condition in Location"
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="23/34/12"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@id/conditioninlocation"
                    android:gravity="end"
                    android:textSize="20dp"
                    />


        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>